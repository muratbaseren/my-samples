@page
@model WebApplication_RazorPagesProject.Pages.CreateMemberModel

<h1>Create Member</h1>
<hr />

<div class="row">
    <div class="col-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="John" />
            </div>
            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" placeholder="Doe" />
            </div>
            <div class="form-group">
                <label asp-for="Age">Age</label>
                <input asp-for="Age" class="form-control" placeholder="18" />
            </div>
            <div class="form-group">
                <label asp-for="MemberType">Member Type</label>
                <select class="form-control" asp-items="@(new SelectList(Model.MemberTypes))" asp-for="MemberType">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
            <div class="mt-3">
                @Model.Result
            </div>
        </form>
    </div>
</div>