@using MFramework.Services.FakeData
@{
    ViewData["Title"] = "Home Page";
    ViewData["PageTitle"] = "Home Page";
}

<div class="view view-main">
    <div data-name="home" class="page">

        <div class="navbar">
            <div class="navbar-inner">
                <div class="title">Todos</div>
                <div class="right">
                    <a href="#" class="link" id="add"><i class="fa fa-plus"></i>&nbsp;New</a>
                </div>
            </div>
        </div>

        <div class="toolbar tabbar tabbar-labels toolbar-bottom">
            <div class="toolbar-inner">
                <a href="#tab1" class="tab-link tab-link-active" data-title="Todos">
                    <i class="fa fa-clipboard-list fa-2x"></i>
                </a>
                <a href="#tab2" class="tab-link" data-title="Completed">
                    <i class="fa fa-check fa-2x"></i>
                </a>
                <a href="#tab3" class="tab-link" data-title="Canceled">
                    <i class="fa fa-times fa-2x"></i>
                </a>
            </div>
        </div>

        <div class="tabs-animated-wrap tabs-swipeable-wrap">
            <div class="tabs">
                <!-- First tab, active -->
                <div class="page-content tab tab-active" id="tab1">
                    <div class="block">
                        <div>
                            <div class="list todos todo-list">
                                @Html.Partial("TodoListPartial", TodoStatus.todo)
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Second tab -->
                <div class="page-content tab" id="tab2">
                    <div class="block">
                        <div>
                            <div class="list todos done-list">
                                @Html.Partial("TodoListPartial", TodoStatus.done)
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Third tab -->
                <div class="page-content tab" id="tab3">
                    <div class="block">
                        <div>
                            <div class="list todos cancel-list">
                                @Html.Partial("TodoListPartial", TodoStatus.cancel)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

